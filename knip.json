{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": true,
  "workspaces": {
    ".": {},
    "apps/web": {
      "ignoreDependencies": [
        "@t3-oss/env-nextjs",
        "@tailwindcss/postcss"
      ],
      "entry": [
        "app/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "__tests__/**/*.{ts,tsx}"
      ],
      "project": [
        "app/**/*.{ts,tsx}",
        "lib/**/*.{ts,tsx}",
        "components/**/*.{ts,tsx}",
        "__tests__/**/*.{ts,tsx}"
      ],
      "playwright": {
        "config": ["playwright.config.ts"],
        "entry": ["e2e/**/*.{ts,spec.ts}"]
      }
    },
    "packages/ui": {
      "ignoreDependencies": [
        "date-fns",
        "next",
        "postcss",
        "postcss-load-config"
      ]
    },
    "packages/typescript-config": {
      "ignoreDependencies": ["next"]
    },
    "packages/api": {
      "project": ["src/**/*.ts"]
    },
    "packages/db": {
      "project": ["src/**/*.ts"]
    }
  }
}
