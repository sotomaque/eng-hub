{
  "name": "eng-hub",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "biome:format": "biome format --write .",
    "prepare": "husky",
    "test": "bun --filter=web test __tests__",
    "test:e2e": "bun --filter=web test:e2e",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@workspace/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "knip": "^5.84.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.7.4",
    "typescript": "5.7.3"
  },
  "lint-staged": {
    "apps/web/**/*.{ts,tsx}": [
      "bun --filter=web lint:fix"
    ]
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "@clerk/themes": "^2.4.54"
  }
}
