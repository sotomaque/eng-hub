{
  "name": "eng-hub",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "biome format --write .",
    "biome:check": "biome check .",
    "biome:fix": "biome check --write .",
    "prepare": "lefthook install",
    "test": "turbo test",
    "ci": "turbo ci",
    "test:e2e": "bun --filter=web test:e2e",
    "knip": "knip"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@workspace/typescript-config": "workspace:*",
    "knip": "^5.84.1",
    "lefthook": "^2.1.1",
    "turbo": "^2.7.4",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.3.5"
  },
  "packageManager": "bun@1.3.5",
  "dependencies": {
    "@clerk/themes": "^2.4.54"
  }
}
