{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "CLERK_SECRET_KEY",
        "POSTGRES_PRISMA_URL",
        "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
        "NEXT_PUBLIC_APP_URL",
        "SKIP_ENV_VALIDATION",
        "UPLOADTHING_TOKEN",
        "QSTASH_URL",
        "QSTASH_TOKEN",
        "QSTASH_CURRENT_SIGNING_KEY",
        "QSTASH_NEXT_SIGNING_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix"]
    },
    "test": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "ci": {
      "dependsOn": ["lint", "test"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
